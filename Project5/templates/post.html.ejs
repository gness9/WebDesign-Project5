<!doctype html>
<html>
    <head>
        <title>Kansas Computer Science Standards</title>
        <link href="/site.css" rel="stylesheet">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <link rel="shortcut icon" href="#" />
    </head>
    <body>
        <header>
          <div>
            <% if(locals.user) { %>
              Welcome <%= user.username %>!
              <a href="/forum/topics/new">Create a Post</a>
            <% } %>
          </div>
            <a href="/signin">Sign In</a> 
            or
            <a href="/signup">Sign Up</a>
        </header>
        <a href="/signout">Sign Out</a>
        <header>
          <div>
            <a href="/">Home</a>
             <a href="/standards">Standards</a>
             <a href="/forum">Forum</a>
          </div>
        </header>
        <h1>
          <b>Kansas Computer Science Standards</b>
        </h1>
        <div class="div0">
          <p>Topic</p>
          <p>Author</p>
          <p>Posts</p>
          <p>Date Created</p>
          <p>Extra</p>
        <div>
        </div>
        </div>
        <div id="boxes">
          <% queries.forEach((query) =>{ %>
            <div class="div1">
               <div class="sec1"><a href="\forum"><%= query.subject %></a></div>
            </div>
            <div class="div2">
                <p class="sec2"><%= query.creator %></p>
                <p class="div3"><%= query.summary %></p>
              </div>
            <div class="div5">
              <p class="sec5"><%= query.postCount %></p>
            </div>
            <div class="div6">
              <p class="sec6"><%= query.date %></p>
            </div>
              <div class="div7">
                <p class="sec7">Hi</p>
              </div>
          <% }) %>
        </div>
        <script src="/site.js"></script>
    </body>
</html>